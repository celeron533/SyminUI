<UserControl x:Class="SyminUI.ViewBody"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SyminUI"
             xmlns:cvt ="clr-namespace:SyminUI.Convertor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <cvt:ViewDefinitionToElement x:Key="VDTE"/>
    </UserControl.Resources>
    <ContentControl Focusable="False"
            Content="{Binding ViewDefinition, Converter={StaticResource VDTE}, 
        RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:ViewBody}}}"/>
</UserControl>
