<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--顶部背景、按钮、可点击文字-->
    <SolidColorBrush x:Key="PrimaryColor" Color="#1A56F2"/>
    <SolidColorBrush x:Key="SecondaryColor" Color="#3CD9E0"/>
    <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#1A56F2"/>
        <GradientStop Color="#3CD9E0" Offset="1"/>
    </LinearGradientBrush>
    <!--背景色-->
    <SolidColorBrush x:Key="Background.Main" Color="#E8E9EC"/>
    <SolidColorBrush x:Key="Background.Pure" Color="White"/>
    <!--光照-->
    <SolidColorBrush x:Key="Shader.Highlight" Color="#F9FAFE"/>
    <SolidColorBrush x:Key="Shader.Shadow" Color="#B3B5C1"/>
    <LinearGradientBrush x:Key="Shader.Gradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#F9FAFE" Offset="0.5"/>
        <GradientStop Color="#B3B5C1" Offset="0.5"/>
        <LinearGradientBrush.RelativeTransform>
            <RotateTransform Angle="50" CenterX="0.5" CenterY="0.5"/>
        </LinearGradientBrush.RelativeTransform>
    </LinearGradientBrush>
    <!--左侧菜单背景色-->
    <SolidColorBrush x:Key="Function.Dark" Color="#191A23"/>
    <!--按钮选择、点缀色-->
    <SolidColorBrush x:Key="PrimaryLight" Color="#57A3F3"/>
    <!--按钮高亮-->
    <SolidColorBrush x:Key="PrimaryHighlight" Color="#FF78B6F7"/>
    <!--亮色背景色-->
    <SolidColorBrush x:Key="Function.LightBackground" Color="#F8F8F8"/>
    <!--亮色边框色-->
    <SolidColorBrush x:Key="Function.LightBorder" Color="#FFC8C8C8"/>
    <!--提示、警戒反馈-->
    <SolidColorBrush x:Key="Function.Alert" Color="#FF9900"/>
    <!--删除按钮-->
    <SolidColorBrush x:Key="Function.Delete" Color="#ED4014"/>
    <!--不可用状态、分割线-->
    <SolidColorBrush x:Key="Function.Grey" Color="#CCCCCC"/>
    <!--附加颜色-->
    <SolidColorBrush x:Key="Additional.Green" Color="#2FC25A"/>
    <SolidColorBrush x:Key="Additional.Red" Color="#F46C6C"/>
    <!--不可用对象文本-->
    <SolidColorBrush x:Key="Additional.Grey" Color="#90939A"/>
    <SolidColorBrush x:Key="Additional.Blue" Color="#35B5E6"/>
    <SolidColorBrush x:Key="Additional.Purple" Color="#9A66E4"/>
    <SolidColorBrush x:Key="Additional.Background" Color="#F6F7F9"/>
    <!--文本颜色-->
    <SolidColorBrush x:Key="Text.Main" Color="#515A6E"/>
    <SolidColorBrush x:Key="Text.Menu" Color="#BABBBD"/>
    <SolidColorBrush x:Key="Text.White" Color="#FFFFFF"/>

    <!--聚焦对象视觉效果-->
    <Style x:Key="FocusVisual">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Rectangle Margin="2" StrokeDashArray="4 1" RadiusX="5" RadiusY="5"
                               Stroke="{StaticResource Additional.Grey}" 
                               SnapsToDevicePixels="true" StrokeThickness="1"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>