<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--顶部背景、按钮、可点击文字-->
    <Color x:Key="PrimaryColor" R="26" G="86" B="242" A="255"/>
    <Color x:Key="SecondaryColor" R="60" G="217" B="224" A="255" />

    <Color x:Key="PrimaryColor.Light" R="204" G="227" B="255" A="255" />
    <Color x:Key="PrimaryColor.Shadow" R="127" G="136" B="189" A="255" />
    
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource PrimaryColor}"/>
        <GradientStop Color="{StaticResource SecondaryColor}" Offset="1"/>
    </LinearGradientBrush>
    
    <!--背景色-->
    <SolidColorBrush x:Key="Background.Main" Color="#E8E9EC"/>
    <SolidColorBrush x:Key="Background.Pure" Color="White"/>
    <SolidColorBrush x:Key="Background.Border" Color="#FFA6A9BB"/>
    
    <!--光照-->
    <Color x:Key="Shader.LightColor" R="249" G="250" B="254" A="255"/>
    <Color x:Key="Shader.ShadowColor" R="179" G="181" B="193" A="255"/>
    
    <SolidColorBrush x:Key="Shader.Light" Color="{StaticResource Shader.LightColor}"/>
    <SolidColorBrush x:Key="Shader.Shadow" Color="{StaticResource Shader.ShadowColor}"/>

    <!--左侧菜单背景色-->
    <SolidColorBrush x:Key="Function.Dark" Color="#191A23"/>
    <!--按钮选择、点缀色-->
    <SolidColorBrush x:Key="PrimaryLight" Color="#57A3F3"/>
    <!--按钮高亮-->
    <SolidColorBrush x:Key="PrimaryHighlight" Color="#FF78B6F7"/>
    <!--亮色背景色-->
    <SolidColorBrush x:Key="Function.LightBackground" Color="#F8F8F8"/>
    <!--亮色边框色-->
    <SolidColorBrush x:Key="Function.LightBorder" Color="#FFC8C8C8"/>
    <!--提示、警戒反馈-->
    <SolidColorBrush x:Key="Function.Alert" Color="#FF9900"/>
    <!--删除按钮-->
    <SolidColorBrush x:Key="Function.Delete" Color="#ED4014"/>
    <!--不可用状态、分割线-->
    <SolidColorBrush x:Key="Function.Grey" Color="#CCCCCC"/>
    <!--附加颜色-->
    <SolidColorBrush x:Key="Additional.Green" Color="#2FC25A"/>
    <SolidColorBrush x:Key="Additional.Red" Color="#F46C6C"/>
    <!--不可用对象文本-->
    <SolidColorBrush x:Key="Additional.Grey" Color="#90939A"/>
    <SolidColorBrush x:Key="Additional.Blue" Color="#35B5E6"/>
    <SolidColorBrush x:Key="Additional.Purple" Color="#9A66E4"/>
    <SolidColorBrush x:Key="Additional.Background" Color="#F6F7F9"/>
    <!--文本颜色-->
    <SolidColorBrush x:Key="Text.Main" Color="#515A6E"/>
    <SolidColorBrush x:Key="Text.Secondary" Color="#BABBBD"/>
    <SolidColorBrush x:Key="Text.Contrast" Color="#FFFFFF"/>

    <!--聚焦对象视觉效果-->
    <Style x:Key="FocusVisual">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Rectangle Margin="2" StrokeDashArray="4 1" RadiusX="5" RadiusY="5"
                               Stroke="{StaticResource Additional.Grey}" 
                               SnapsToDevicePixels="true" StrokeThickness="1"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>