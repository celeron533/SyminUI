<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:svd="clr-namespace:SyminUI.Controls.Decorations"
                    xmlns:cvts="clr-namespace:SyminUI.Convertor.Slot"
                    xmlns:cvt="clr-namespace:SyminUI.Convertor">
    <Style TargetType="{x:Type svd:SlotBorder}">
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Foreground" Value="{StaticResource Text.Main}"/>
        <Setter Property="Background" Value="{StaticResource Background.Main}"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
        <Setter Property="Radius" Value="4"/>
        <Setter Property="ShaderEnabled" Value="True"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Intensity" Value="1"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type svd:SlotBorder}">
                    <ControlTemplate.Resources>
                        <cvts:WidthHeightToRect x:Key="WHTR"/>
                        <cvts:ValueToRadius x:Key="VTR"/>
                        <cvts:IntensityToBlur x:Key="ITB"/>
                        <cvts:IntensityToMargin x:Key="ITM"/>
                        <cvt:BoolToVisibility x:Key="BTV"/>
                    </ControlTemplate.Resources>

                    <Grid>
                        <!--呈现背景色-->
                        <Border Margin="4" CornerRadius="{TemplateBinding Radius,Converter={StaticResource VTR}}"
                                Background="{TemplateBinding Background}"/>
                        <!--内阴影效果-->
                        <Grid Margin="4" Visibility="{TemplateBinding ShaderEnabled,
                                                        Converter={StaticResource BTV}}">
                            <!--边框和底色-->
                            <Rectangle Fill="{StaticResource Shader.Slot}" Margin="4"/>
                            <Rectangle Height="8" VerticalAlignment="Bottom" Margin="0,0,0,-4"
                                           Fill="{StaticResource Shader.Light}"/>
                            <Rectangle Width="8" HorizontalAlignment="Left" Margin="-4,0,0,0"
                                           Fill="{StaticResource Shader.Shadow}"/>
                            <Rectangle Height="8" VerticalAlignment="Top" Margin="0,-4,0,0"
                                           Fill="{StaticResource Shader.Shadow}"/>
                            <Rectangle Width="8" HorizontalAlignment="Right" Margin="0,0,-4,0"
                                           Fill="{StaticResource Shader.Light}"/>
                            <!--背景-->
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="{TemplateBinding Radius,Converter={StaticResource VTR}}"
                                    Margin="{TemplateBinding Intensity,Converter={StaticResource ITM}}"/>
                            <Grid.Clip>
                                <RectangleGeometry RadiusX="{Binding RelativeSource={RelativeSource TemplatedParent}, 
                                                                Path=Radius}" 
                                                   RadiusY="{Binding RelativeSource={RelativeSource TemplatedParent}, 
                                                                Path=Radius}" >
                                    <RectangleGeometry.Rect>
                                        <MultiBinding Converter="{StaticResource WHTR}" Mode="OneWay"
                                                          ConverterParameter="4">
                                            <Binding RelativeSource="{RelativeSource TemplatedParent}" 
                                             Path="ActualWidth" Mode="OneWay"/>
                                            <Binding RelativeSource="{RelativeSource TemplatedParent}" 
                                             Path="ActualHeight" Mode="OneWay"/>
                                        </MultiBinding>
                                    </RectangleGeometry.Rect>
                                </RectangleGeometry>
                            </Grid.Clip>
                            <Grid.Effect>
                                <BlurEffect Radius="{Binding RelativeSource={RelativeSource TemplatedParent}, 
                                                    Path=Intensity,Converter={StaticResource ITB},Mode=OneWay}"/>
                            </Grid.Effect>
                        </Grid>
                        <Border CornerRadius="{TemplateBinding Radius,Converter={StaticResource VTR}}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}" Margin="4">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" 
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" 
                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                          TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </Grid>


                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>